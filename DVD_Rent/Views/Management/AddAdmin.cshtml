                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail">Email</label>
                                        @*<input type="email" class="form-control" id="exampleInputEmail" placeholder="Email">*@
                                        @Html.TextBoxFor(m => m.email, new { @type = "email", @class = "form-control", @placeholder = "Email", id = "exampleInputEmail" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPhone">Phone</label>
                                        @*<input type="email" class="form-control" id="exampleInputPhone" placeholder="Phone">*@
                                        @Html.TextBoxFor(m => m.phone, new { @type = "number", @class = "form-control", @placeholder = "Phone", id = "exampleInputPhone" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleTextarea1">Address</label>
                                        @*<textarea class="form-control" id="exampleTextarea1" rows="4" placeholder="Address"></textarea>*@
                                        @Html.TextAreaFor(m => m.address, new { @class = "form-control", @rows = "4", @placeholder = "Address", id = "exampleTextarea1" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleSelectGender">Gender</label>
                                        <select class="form-control" id="exampleSelectGender">
                                            <option value="">-- Please select --</option>
                                            <option value="1">Male</option>
                                            <option value="2">Female</option>
                                        </select>
                                        @Html.HiddenFor(m => m.gender, new { @id = "hfGender" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword">Password</label>
                                        @*<input type="password" class="form-control" id="exampleInputPassword" placeholder="Password">*@
                                        @Html.TextBoxFor(m => m.password, new { @type = "password", @class = "form-control", @placeholder = "Password", id = "exampleInputPassword" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputConfirmPassword">ConfirmPassword</label>
                                        @*<input type="password" class="form-control" id="exampleInputConfirmPassword" placeholder="Confirm Password">*@
                                        @Html.TextBoxFor(m => m.confirmpassword, new { @type = "password", @class = "form-control", @placeholder = "Confirm Password", id = "exampleInputConfirmPassword" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleSelectGender">Store</label>
                                        <select class="form-control" id="exampleSelectStore">
                                            <option value="0">-- Please select --</option>
                                            @foreach (var item in Model.listDDLStore)
