                                @using (Html.BeginForm("AddAdminPost", "Management", FormMethod.Post, FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    <div class="form-group">
                                        <label for="exampleInputFirstname">First Name</label>
                                        @*<input type="text" class="form-control" id="exampleInputFirstname" placeholder="First Name">*@
                                        @Html.TextBoxFor(m => m.firstname, new { @class = "form-control", @placeholder = "First Name", id = "exampleInputFirstname" })
