                                                <option value="@item.storeID">@item.store</option>
                                            }
                                        </select>
                                        @Html.HiddenFor(m => m.store, new { @id = "hfStore" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleSelectPosition">Position</label>
                                        <select class="form-control" id="exampleSelectPosition">
                                            <option value="0">-- Please select --</option>
